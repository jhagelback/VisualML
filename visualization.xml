    <!-- 
        Dataset scale and shift settings.
        The visualization area has an x and y range between 0 and 1, so depending
        on how the dataset looks like the attribute values might need to be scaled
        and shifted to fit between 0 and 1.
    -->
    <Dataset>
        <DatasetFile>iris_pca.csv</DatasetFile>
        <X-scale>10</X-scale>
        <Y-scale>8</Y-scale>
        <X-shift>3</X-shift>
        <Y-shift>-4</Y-shift>
    </Dataset>
    <Dataset>
