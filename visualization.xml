<?xml version="1.0"?>
<Visualizations>
    <!--
        This file defines the visualization tasks shown in the GUI window. A visualization
        task has a dataset and a classifier, and shows the decision borders the classifier
        has learned from the dataset.
        
        The following parameters are available:
        
        <ExperimentId>l_demo</ExperimentId>         Experiment id (in the experiments.xml file)
        <Speed>1</Speed>                            Speed (training iterations per step in the visualization). Only used for iterable training phase classifiers (Linear and NN).
        <Name>Demo</Name>                           Name of the visualization task
        <Menu>Linear</Menu>                         Menu to add the task to
    -->
    
    <!--
        Linear tasks
    -->
    <Task>
        <ExperimentId>l_demo</ExperimentId>
        <Speed>1</Speed>
        <Name>Demo</Name>
        <Menu>Linear</Menu>
    </Task>
    <Task>
        <ExperimentId>l_spiral</ExperimentId>
        <Speed>10</Speed>
        <Name>Spiral</Name>
        <Menu>Linear</Menu>
    </Task>
